{% extends 'abilities/ability_layout.j2' %}

{% from 'abilities/commands/simple_commands.j2' import command_table %}
{% from 'abilities/magic/simple_spells.j2' import spell_table %}
{% from 'abilities/summons/simple_summons.j2' import summon_table %}
{% from 'abilities/enemy_skills/simple_eskills.j2' import eskill_table %}

{% block ability_content %}
  <div class="content-area page-nav ability-colors">
    <div class="scaled-row-wrapper">
      <a class="scale-12-3" href="#Commands">Commands</a>
      <a class="scale-12-3" href="#Spells">Spells</a>
      <a class="scale-12-3" href="#Summons">Summons</a>
      <a class="scale-12-3" href="#Enemy Skills">Enemy Skills</a>
    </div>
  </div>

  <div class="content-area packed">
    {{ command_table(commands) }}
  </div>
  <div class="content-area packed">
    {{ spell_table('All Spells',spells, 'Spells') }}
  </div>
  <div class="content-area packed">
    {{ summon_table(summons) }}
  </div>
  <div class="content-area packed">
    {{ eskill_table(eskills) }}
  </div>
{% endblock ability_content %}
