{% extends 'abilities/ability_layout.j2' %}

{% if detail %}
  {% from 'abilities/magic/detail_spells.j2' import spell_table %}
{% else %}
  {% from 'abilities/magic/simple_spells.j2' import spell_table %}
{% endif %}

{% block content %}
  <div class="content-area packed">
    {{ spell_table('Restore', restore) }}
  </div>
  <div class="content-area packed">
    {{ spell_table('Attack', attack) }}
  </div>
  <div class="content-area packed">
    {{ spell_table('Indirect', indirect) }}
  </div>
  <div class="content-area packed">
    {{ spell_table('Other', other) }}
  </div>
{% endblock content %}
