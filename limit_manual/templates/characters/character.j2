{% extends 'layout.j2' %}

{% block title %}<title>{{ character.name }} - Limit Manual</title>{% endblock %}

{% block page_styles %}
  {% assets 'css_character' %}
    <link rel="stylesheet" type="text/css" href="{{ ASSET_URL }}">
  {% endassets %}
{% endblock page_styles %}

{% macro intro_pair(key,value) -%}
  <tr>
    <td>{{ key | upper }}</td>
    <td>{{ value }}</td>
  </tr>
{%- endmacro %}{# intro pair #}

{% block content %}
  {# introduction to the character #}
  <div id="intro" class="content-box small character-colors">

    <div class="sizing-reference">{# used to correctly size portrait image #}
      {% with intro = character.intro %}
        <table id="intro-table">
          <tbody>
            {{ intro_pair('job', intro.job) }}
            {{ intro_pair('age', intro.age) }}
            {{ intro_pair('weapon', intro.weapon) }}
            {{ intro_pair('height', intro.height) }}
            {{ intro_pair('birthdate', intro.birthdate) }}
            {{ intro_pair('birthplace', intro.birthplace) }}
            {{ intro_pair('blood type', intro.blood_type) }}
            <tr><td colspan="2">{{ intro.description }}</td></tr>
          </tbody>
        </table>
      {% endwith %}

      <img class="portrait back" src="{{ url_for('static', filename=character.main_image) }}" alt="Portrait of {{ character.name }}">
    </div>
  </div>
{% endblock content %}
