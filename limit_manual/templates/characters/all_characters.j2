{% extends 'layout.j2' %}

{% block page_styles %}
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/character.css') }}">
{% endblock page_styles %}

{% block content %}
  <div class="content-box character-colors">
    <h3>Playable Characters</h4>
    <ul id="playable-characters" class="image-list">
    {% for character in characters %}
      <li id="{{ character.name }}">
        <a href="/characters/{{ character.name }}">
          <img src="{{ url_for('static', filename='images/characters/' + character.image) }}">
        </a>
      </li>
    {% endfor %}
    </ul>
  </div>
{% endblock content %}
